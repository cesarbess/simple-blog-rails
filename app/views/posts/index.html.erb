<h1>Blog Posts</h1>
<% if @posts.empty?%>
  <p> No posts found with that title </p>
<% end %>
<% @posts.each do |post| %>
  <div class="well">
    <h3><%= post.title %> </h3>
    <p><%= post.body %></p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-default'%>
  </div>
<% end %>
<!--We don't use <%= because we don't output any variable  -->
